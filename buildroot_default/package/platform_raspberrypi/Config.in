config BR2_PACKAGE_PLATFORM_RASPBERRYPI
	bool "Platform RaspberryPi"
	depends on BR2_arm1176jzf_s
	help
	  Platform ARM RaspberryPi.

if BR2_PACKAGE_PLATFORM_RASPBERRYPI

choice
prompt "Platform as HOST/GUEST"

config BR2_PACKAGE_PLATFORM_RASPBERRYPI_AS_HOST
	bool "Host"
	select BR2_PACKAGE_PLATFORM_AS_HOST
	select BR2_PACKAGE_IOPCLAUNCHER
	select BR2_PACKAGE_MDADM
	select BR2_PACKAGE_LXC
	select BR2_PACKAGE_DROPBEAR
	select BR2_TARGET_ROOTFS_INITRAMFS
	select BR2_TARGET_ROOTFS_IOPCLAUNCHER
	select BR2_TOOLCHAIN_EXTERNAL
	#select BR2_TOOLCHAIN_EXTERNAL_LINARO_ARM
	#select BR2_PACKAGE_LIBMICROHTTPD
	select BR2_PACKAGE_INITSCRIPTS
	select BR2_PACKAGE_RPI_FIRMWARE

config BR2_PACKAGE_PLATFORM_RASPBERRYPI_AS_GUEST
	bool "Guest"
	select BR2_PACKAGE_PLATFORM_AS_GUEST
	select BR2_PACKAGE_INITSCRIPTS
	#select BR2_PACKAGE_RPI_USERLAND

endchoice

endif
